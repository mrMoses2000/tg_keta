# ============================================================
# Telegram Keto-Bot â€” Environment Variables
# Copy to .env and fill in your values
# ============================================================

# -- Telegram --
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=generate_a_random_string_here

# -- Webhook --
# Mode: 'ngrok' for dev, 'domain' for production
WEBHOOK_MODE=ngrok
WEBHOOK_DOMAIN=https://your-domain.com
WEBHOOK_PORT=8080
WEBHOOK_PATH=/webhook

# -- Supabase (recipes, read-only) --
SUPABASE_URL=https://ijzrgldfrqjaysxnmhdq.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -- Local Postgres (state tables) --
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=keto_bot
POSTGRES_USER=keto_bot
POSTGRES_PASSWORD=change_me_in_production

# -- Redis --
REDIS_URL=redis://localhost:6379/0

# -- LLM --
LLM_CLI_COMMAND=gemini
LLM_CLI_FLAGS=-p
LLM_OUTPUT_FORMAT=json
MAX_LLM_CONCURRENCY=1
LLM_TIMEOUT_SECONDS=60

# -- Behaviour --
BOT_LANGUAGE=ru
KNOWLEDGE_MODE=off
SEND_TYPING_INDICATOR=true
SEND_PLACEHOLDER_MESSAGE=true
MAX_CONTEXT_MESSAGES=10
RECIPE_CACHE_TTL_SECONDS=300

# -- Logging --
LOG_LEVEL=INFO
LOG_FORMAT=json
